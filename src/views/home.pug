doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    title Noom
  body 
    header 
      h1 Noom
    main
      h2 Welcome to Noom
      div
        input#nicknameInput(type="text", placeholder="Enter a Nickname")
        button#nicknameButton(type="button") SAVE
      h3 Your Nickname is 
        span#nickname(style="color: gold") Anoymous
      div#chatList
      form#form
        input#input(type="text", placeholder="Write a Message..")
        button(type="submit") Send
    script(src="/public/js/app.js")